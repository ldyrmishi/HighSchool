@model HighSchoolApplication.API.Models.DocumentCategoryModel

@{
    ViewData["Title"] = "Shto kategori";
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3>Shto kategori dokumenti</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Kategoria</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Kthehu te lista e kategorive</a>
            </div>
        </div>
    </div>
    
</section>


