@model HighSchoolApplication.API.Models.SubjectModel

@{
    ViewData["Title"] = "AddSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <h3>Shto Subjekt</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="AddSubject">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SubjectTitle" class="control-label">Emri i lendes</label>
                            <input asp-for="SubjectTitle" class="form-control" />
                            <span asp-validation-for="SubjectTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SubjectDescription" class="control-label">Pershkrimi i lendes</label>
                            <input asp-for="SubjectDescription" class="form-control" />
                            <span asp-validation-for="SubjectDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Term" class="control-label">Semestri</label>
                            @Html.DropDownList("Term", ViewData["Term"] as List<SelectListItem>)
                            <span asp-validation-for="Term" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaxPoints" class="control-label">Piket maksimale</label>
                            <input asp-for="MaxPoints" type="number" class="form-control" />
                            <span asp-validation-for="MaxPoints" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Shto" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Kthehu te lista e subjekteve</a>
            </div>
        </div>
    </div>
</section>


