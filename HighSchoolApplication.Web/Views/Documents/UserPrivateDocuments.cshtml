@model IEnumerable<HighSchoolApplication.API.Models.DocumentsModel>

@{
    ViewData["Title"] = "UserPrivateDocuments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="box box-primary">
        <div class="box-header">
            <h3>Dokumentat private</h3>
        </div>
        <div class="box-body">
            <table class="table">
                <tbody>
                    @foreach (var item in Model)
                    {
                        if(item.Id % 3 == 0)
                        {
                            <tr></tr>
                            <tr></tr>
                            <br/>
                        }
                        <tr>
                            <td align="center">
                                <a href="@Url.Action("GetDocumentById", "Documents", new { id = item.Id })"></a>
                                    <img src="~/dist/img/file-image.png" width="150" height="150" /><br/>
                                @Html.DisplayFor(modelItem => item.DocumentDescription)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
    </div>
</section>
