@model HighSchoolApplication.API.Models.DocumentsModel

@{
    ViewData["Title"] = "Gjenero vertetim studenti";
}

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3>Vertetim Studenti</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="GenerateStudentCertificate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="User" class="control-label"></label>
                                @Html.DropDownList("StudentsList", "Zgjidhni studentin")
                                <span asp-validation-for="User" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DocumentCategory" class="control-label"></label>
                                @Html.DropDownList("DocumentCategories", "Zgjidhni kategorine")
                                <span asp-validation-for="DocumentCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Gjenero" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Kthehu te lista e dokumentave</a>
                </div>
            </div>
        </div>
    </section>
