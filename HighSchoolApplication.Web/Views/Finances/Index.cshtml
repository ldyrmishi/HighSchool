@model  HighSchoolApplication.Web.ViewModels.FinancesTabViewModel
@{
    ViewData["Title"] = "Index";
}
<section class="content">
    <div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li role="presentation" class="@(Model.ActiveTab == HighSchoolApplication.Web.ViewModels.Tab.Incomings ? "active" : string.Empty)"><a asp-route-tab-name="Incomings" asp-action="SwitchToTabs">Te ardhura</a></li>
            <li role="presentation" class="@(Model.ActiveTab == HighSchoolApplication.Web.ViewModels.Tab.Expenses ? "active" : string.Empty)"><a asp-route-tab-name="Expenses" asp-action="SwitchToTabs">Shpenzime</a></li>
        </ul>

        @switch (Model.ActiveTab)
        {
            case HighSchoolApplication.Web.ViewModels.Tab.Incomings:
                @await Component.InvokeAsync("Incomings");
                break;
            case HighSchoolApplication.Web.ViewModels.Tab.Expenses:
                @await Component.InvokeAsync("Expenses");
                break;
            default:
                break;
        }

    </div>
</section>
