@model HighSchoolApplication.API.Models.UsersModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger">
            <div>
                <label id="success"></label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="box-title">
                            Të dhena personale
                        </div>
                        <div class="box-tools pull-right">
                            <!-- Collapse Button -->
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Firstname" class="control-label">Emri</label>
                            <input asp-for="Firstname" class="form-control" />
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Lastname" class="control-label">Mbiemri</label>
                            <input asp-for="Lastname" class="form-control" />
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NrAmze" class="control-label">Numer Amze</label>
                            <input asp-for="NrAmze" class="form-control" />
                            <span asp-validation-for="NrAmze" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Birthdate" class="control-label">Datelindja</label>
                            <input asp-for="Birthdate" type="date" class="form-control" />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Gjinia</label>
                            @Html.DropDownList("Gender", ViewData["Gender"] as List<SelectListItem>)
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="box-title">
                            Të dhëna të përgjithshme
                        </div>
                        <div class="box-tools pull-right">
                            <!-- Collapse Button -->
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Username" class="control-label">Emri i perdoruesit</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label">Numer telefoni</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Fjalekalimi</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label">Konfirmo fjalekalimin</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="=row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="box-title">
                            Dokumenta personale
                        </div>
                        <div class="box-tools pull-right">
                            <!-- Collapse Button -->
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Documents" class="control-label">Dokumenta</label>
                            <input asp-for="Documents" multiple type="file" class="form-control" />
                        </div>
                        <div class="form-group">

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="box-title">
                            Te dhena te tjera
                        </div>
                        <div class="box-tools pull-right">
                            <!-- Collapse Button -->
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Role" class="control-label">Roli</label>
                            @Html.DropDownList("RolesList", "Zgjidhni rolin")
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="=row pull-right">
            <button class="btn btn-primary" type="submit">Ruaj</button>
            <a class="btn btn-primary" asp-action="Index">Kthehu mbrapa</a>
        </div>
    </form>

</section>
@if (Model != null)
{
    <script type="text/javascript">
            $(function () {
               alert(" Perdoruesi u regjistrua me sukses");
            });
    </script>
}
