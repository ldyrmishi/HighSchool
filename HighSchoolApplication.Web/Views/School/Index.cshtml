@model IEnumerable<HighSchoolApplication.API.Models.SchoolModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">
    
    <div class="box box-primary">
        
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a asp-action="Create" class="btn btn-primary">Shto shkolle te re</a>
            </div>
            <h3>Lista e Shkollave</h3>

        </div>
        <div class="box-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Emri
                        </th>
                        <th>
                            Adresa
                        </th>
                        <th>
                            Telefon
                        </th>
                        <th>
                            Logo
                        </th>
                        <th>
                            Qyteti
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @*TODO Show Address Partial View Here*@
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Logo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
