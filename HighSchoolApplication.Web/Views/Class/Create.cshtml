@model HighSchoolApplication.API.Models.ClassModel

@{
    ViewData["Title"] = "Shto klase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3>Krijo klase</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ClassNo" class="control-label">Numri i klases</label>
                            <input asp-for="ClassNo" class="form-control" />
                            <span asp-validation-for="ClassNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClassYear" class="control-label">Viti i klases</label>
                            <input asp-for="ClassYear" class="form-control" />
                            <span asp-validation-for="ClassYear" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SchoolId" class="control-label">Shkolla</label>
                            <input asp-for="SchoolId" class="form-control" />
                            <span asp-validation-for="SchoolId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Shto" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Kthehu te lista e klasave</a>
            </div>
        </div>
        </div>
    </section>

